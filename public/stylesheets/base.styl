.status{
    position:absolute;
    top:-38px;
    left:50%;
    span{
        position:relative;
        display: inline-block;
        white-space: nowrap;
        left:-50%;
        color:#b94a48;
        border:1px solid #c7254e;
        background:#f9f2f4;
        border-radius:4px;
        font:12px/28px '';
        padding:0 20px;
        &:after{
            content:'';
            position:absolute;
            width:8px;
            height:8px;
            bottom:-5px;
            left:50%;
            margin-left:-5px;
            background:#ccc;
            -webkit-transform: rotate(45deg);
            transform: rotate(45deg);
            border:1px solid #c7254e;
            background:#f9f2f4;
            border-width:0 1px 1px 0;
        }
    }
}
